<%- include('partials/header', {user}) -%>
<div class="container">
  <div class="row justify-content-center mt-5 text-center">
      <h1>Profile of <strong><%= user.userName %></strong></h1>
      <% if(ownProfile && posts.length === 0){ %>
        <div class="col-6 mb-3">
          <p>You currently do not have any posts. Make your first post to engage and celebrate with your community.</p>
          <a class="btn btn-primary" href="/post/createNewPost">Make First Post</a>
        </div>
      <% } %>
      <ul class="row list-unstyled">
      <% for(var i=0; i<posts.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <a href="/post/<%= posts[i]._id%>">
            <img class="img-fluid" src="<%= posts[i].image%>">
          </a>
        </li>
      <% } %>
      </ul>
      <% if(!ownProfile){ %>
        <div class="justify-content-center my-5">
          <a class="btn btn-primary" href="/feed">Explore the Community</a>
        </div>
      <% } %>   
    </div>
  </div>
</div>
<%- include('partials/footer') -%>